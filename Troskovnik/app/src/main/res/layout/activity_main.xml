<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context=".MainActivity">


    <Spinner
        android:id="@+id/sortiraj"
        android:layout_width="189dp"
        android:layout_height="53dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/filtriraj"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="9dp"
        android:layout_toEndOf="@+id/sortiraj"
        android:text="filtriraj"
      />

    <Button
        android:id="@+id/dodajRacun"
        android:layout_width="156dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="51dp"

        android:layout_toEndOf="@+id/buttonOsvezi"
        android:text="Dodaj Racun" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="RACUNI"
        android:textSize="20dp"
        android:gravity="center"

        android:background="#64C2A3"
         />

    <ScrollView
        android:layout_width="394dp"
        android:layout_height="514dp"
        android:layout_above="@+id/dodajRacun"
        android:layout_below="@+id/sortiraj"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"

        android:layout_marginEnd="3dp"
        android:layout_marginBottom="15dp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:id="@+id/scrollViewListRacuni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/buttonOsvezi"
        android:layout_width="107dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="54dp"

        android:text="Osvezi" />


</RelativeLayout>